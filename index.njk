    <script src="https://cdn.usefathom.com/script.js" data-site="JDOBKUVB" defer></script>

    <style>
        * {
            box-sizing: border-box;
        }

        body {
            font-size: 1.2em;
            font-family: 'Atkinson Hyperlegible';
            padding: 0;
            margin: 0;
            background: #eef3d7;
        }
        
        .container {
            max-width: 1600px;
            margin: 0 auto;
        }

        .grid3 {
            display: grid;
            grid-template-columns: 1fr 1fr 1fr;
            background: #eef3d7;
            padding: 20px 10px;
            border-bottom: 1px solid #789e9e;
        }

        .grid3.main {
            padding: 30px 10px;
        }

        .grid3 div {
            text-align: center;
            display: flex;
            align-items: center;
            justify-content: center;
            flex-direction: column;
            margin: 0 auto;
        }

        .img {
            width: 100px;
            height: 100px;
            background-position: center;
            background-size: cover;
            border-radius: 50%;
            border: 2px solid #789e9f;
        }

        .grid3 img {
            max-width: 100%;
            max-height: 100px;
        }

        header {
            text-align: center;
            border-bottom: 3px solid #789e9f;
            background: #b6d8d6;
            padding-top: 30px;
            background-image: url('/assets/bg.jpg');
            background-position: center;
            background-size: cover;
        }
        
        h1 .shift {
            font-weight: normal;
        }

        a {
            color: #2e7274;
            font-weight: bold;
        }

        a:hover {
            text-decoration: none;
        }

        header a {
            color: black;
        }

        .double-doctor {
            background: #b6d8d6;
        }

        .show-wrapper {
            margin-bottom:20px;
            display: none;
        }

        label {
            font-size: 1.4em;
        }

        label:hover {
            cursor: pointer;
        }

        input {
            display: none;
        }

        label {
            border: 1px solid #2e7274;
            padding: 5px;
            white-space: nowrap;
            line-height: 55px;
        }

        {%- for show in shows.keys %}
            #{{ show }}:checked + label {
                background: #2e7274;
                color: white;
            }
            #{{ show }}:checked ~ #show-{{ show }} {
                display: block;
            }
        {% endfor %}
    </style>

</head>

<body>

    <a href="https://github.com/rknight/doubleshift" class="github-corner" aria-label="View source on GitHub"><svg width="80" height="80" viewBox="0 0 250 250" style="fill:#151513; color:#fff; position: absolute; top: 0; border: 0; right: 0;" aria-hidden="true"><path d="M0,0 L115,115 L130,115 L142,142 L250,250 L250,0 Z"></path><path d="M128.3,109.0 C113.8,99.7 119.0,89.6 119.0,89.6 C122.0,82.7 120.5,78.6 120.5,78.6 C119.2,72.0 123.4,76.3 123.4,76.3 C127.3,80.9 125.5,87.3 125.5,87.3 C122.9,97.6 130.6,101.9 134.4,103.2" fill="currentColor" style="transform-origin: 130px 106px;" class="octo-arm"></path><path d="M115.0,115.0 C114.9,115.1 118.7,116.5 119.8,115.4 L133.7,101.6 C136.9,99.2 139.9,98.4 142.2,98.6 C133.8,88.0 127.5,74.4 143.8,58.0 C148.5,53.4 154.0,51.2 159.7,51.0 C160.3,49.4 163.2,43.6 171.4,40.1 C171.4,40.1 176.1,42.5 178.8,56.2 C183.1,58.6 187.2,61.8 190.9,65.4 C194.5,69.0 197.7,73.2 200.1,77.6 C213.8,80.2 216.3,84.9 216.3,84.9 C212.7,93.1 206.9,96.0 205.4,96.6 C205.1,102.4 203.0,107.8 198.3,112.5 C181.9,128.9 168.3,122.5 157.7,114.1 C157.9,116.9 156.7,120.9 152.7,124.9 L141.0,136.5 C139.8,137.7 141.6,141.9 141.8,141.8 Z" fill="currentColor" class="octo-body"></path></svg></a><style>.github-corner:hover .octo-arm{animation:octocat-wave 560ms ease-in-out}@keyframes octocat-wave{0%,100%{transform:rotate(0)}20%,60%{transform:rotate(-25deg)}40%,80%{transform:rotate(10deg)}}@media (max-width:500px){.github-corner:hover .octo-arm{animation:none}.github-corner .octo-arm{animation:octocat-wave 560ms ease-in-out}}</style>

    <header>
        <img src="/assets/logo_small.png">
        <p>Actors who have appeared in two medical shows. <br>Any who played a doctor in both are highlighted.</p>
        <p>Data from <a href="https://www.themoviedb.org">TMDB</a>. Made by <a href="https://rknight.me">Robb Knight</a>.</p>
        <p><a href="https://rknight.me/double-shift">Read the blog post</a></p>
    </header>

    <div style="text-align: center;padding-top: 20px;">
        {%- for show in shows.keys %}
            <input class="show-picker" type="radio" id="{{ show }}" name="show" value="{{ show }}" {% if loop.index === 1 %}checked{% endif %}>
            <label for="{{ show }}">{{ shows[show].names.showOne }}/{{ shows[show].names.showTwo }}</label>
        {% endfor %}

        {%- for show in shows.keys %}
            <div id="show-{{ show }}" class="show-wrapper">
                <div class="grid3 main">
                    <div>
                        <img src="/assets/logo_{{ shows[show].keys.showOne }}.png">
                    </div>
                    <div></div>
                    <div>
                        <img src="/assets/logo_{{ shows[show].keys.showTwo }}.png">
                    </div>
                </div>
                <div style="text-align: center;border-bottom: 1px solid #789e9e;">
                    <p><strong>{{ shows[show].data.length }} actors have appeared in both shows</strong></p>
                </div>
                {%- for actor in shows[show].data %}
                    <div class="grid3 {% if actor.doubleDoctor %}double-doctor{% endif %}">
                        <div><strong>{{ actor.showOne[0].character }}</strong> {{ actor.showOne[0].episode_count }} episode{%if actor.showOne[0].episode_count > 1 %}s{% endif %}</div>
                        <div>
                            <a href="https://www.themoviedb.org/person/{{ actor.actor.id }}" target="_blank" rel="noopener">
                                <div class="img" style="background-image: url('https://image.tmdb.org/t/p/w200{{ actor.actor.profile_path }}')"></div>
                                {{ actor.actor.name }}
                            </a>
                        </div>
                        <div><strong>{{ actor.showTwo[0].character }}</strong> {{ actor.showTwo[0].episode_count }} episode{%if actor.showTwo[0].episode_count > 1 %}s{% endif %}</div>
                    </div>
                {% endfor %}
            </div>
        {% endfor %}
    </div>

</body>

</html>
